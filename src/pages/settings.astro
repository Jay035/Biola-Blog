---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Sign up">
  <section class="container" aria-label="Profile">
    <h1 style="margin-bottom: 20px;" class="h1">Profile settings</h1>
    <form id="profile">
      <div class="form-group">
        <label for="signup-name">Name</label>
        <input id="name" type="text" />
      </div>

      <div class="form-group">
        <label for="update_password">Update Password</label>
        <input id="update_password" type="password" />
      </div>
      <button type="submit">Update</button>
    </form>
  </section>

  <script src="../js/auth"></script>
</MainLayout>
